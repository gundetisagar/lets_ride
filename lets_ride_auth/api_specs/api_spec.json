{
    "swagger": "2.0",
    "host": "127.0.0.1:8080",
    "basePath": "/api/lets_ride_auth",
    "info": {
        "version": "1.0.0",
        "title": "LET'S RIDE AUTH",
       "description": "Let's Ride authentication api specs"
    },
    "schemes": [
        "https",
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "read users",
                "write": "create users",
                "update": "update users",
                "delete": "delete users"
            },
            "type": "oauth2"
        }
    },
    "paths": {
        "/login/v1/": {
            "post": {
                "operationId": "login",
                "summary": "Login",
                "parameters": [{
                    "$ref": "#/parameters/LoginParameter"
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/LoginResponse"
                    },
                    "404": {
                        "$ref": "#/responses/InvalidUsernameResponse"
                    },
                    "400": {
                        "$ref": "#/responses/InvalidPasswordResponse"
                    }
                }
            }
        },
        "/get_profile/v1/": {
            "get": {
                "operationId": "get_profile",
                "summary": "User Details",
                "security": [{
                    "oauth": [
                        "read",
                        "write",
                        "update"
                    ]
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/UserProfileResponses"
                    }
                }
            }
        }
    },
    "parameters": {
        "LoginParameter": {
            "name": "login_details",
            "in": "body",
            "description": "Enter your login details",
            "required": true,
            "schema": {
                "$ref": "#/definitions/Login"
            }
        }
    },
    "responses": {
        "LoginResponse": {
            "description": "successfully login and returns user_id, access_token, refresh_token, expires_in",
            "schema": {
                "type": "object",
                "properties": {
                    "user_id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "access_token": {
                        "type": "string"
                    },
                    "refresh_token": {
                        "type": "string"
                    },
                    "expires_in": {
                        "type": "integer",
                        "format": "int64"
                    }
                },
                "required": [
                    "user_id",
                    "access_token",
                    "refresh_token",
                    "expires_in"
                ]
            }
        },
        "InvalidUsernameResponse": {
            "description": "raise error when given username is invalid",
            "schema": {
                "type": "object",
                "properties": {
                    "response": {
                        "type": "string"
                    },
                    "http_status_code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "res_status": {
                        "type": "string",
                        "enum": [
                            "INVALID_USERNAME"
                        ]
                    }
                },
                "required": [
                    "response",
                    "http_status_code",
                    "res_status"
                ]
            }
        },
        "InvalidPasswordResponse": {
            "description": "raises error when given password is incorrect",
            "schema": {
                "type": "object",
                "properties": {
                    "response": {
                        "type": "string"
                    },
                    "http_status_code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "res_status": {
                        "type": "string",
                        "enum": [
                            "INVALID_PASSWORD"
                        ]
                    }
                },
                "required": [
                    "response",
                    "http_status_code",
                    "res_status"
                ]
            }
        },
        "UserProfileResponses": {
            "description": "Returns User Profile",
            "schema": {
                "$ref": "#/definitions/UserProfile"
            }
        }
    },
    "definitions": {
        "Login": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "username",
                "password"
            ]
        },
        "UserProfile": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "mobile_number": {
                  "type": "integer",
                  "format": "int64"
                }
            },
            "required": [
                "username",
                "name",
                "mobile_number"

            ]
        }
    }
}
